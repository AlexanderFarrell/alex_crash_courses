        <div><%= categories[0].name %></div>
        <div><%= categories[0].desc%></div>
    </div>
</a>
<div style="display: grid; text-align: center; grid-template-columns: <%- Repeat(categories.length - 1, "1fr")%>">
    <% for (var i = 1; i < categories.length; i++) { %>
        <a href="<%= categories[i].page%>">
            <div style="color: white;">
                <div><%= categories[i].name %></div>
                <div><%= categories[i].desc%></div>
            </div>
        </a>
    <% } %>
</div>
