<div id="HowDoI" style="background-color: #000031">
    <h1>Let's Begin</h1>
    <div style="text-align: center">Let's pick something which interests you.</div>
    <div class="CoursesContainer" style="grid-template-rows: 1fr 1fr 1fr;">
        <% for (var i = 0; i < how_do_i.length; i++) { %>
            <a href="<%= how_do_i[i].page%>">
                <div class="CourseItem" style="background: <%- how_do_i[i].background%>;">
