                    <div class="CourseDetails">
                        <div style="font-size: 1.5rem; font-weight: lighter; color: <%- how_do_i[i].title_color%>"><%= how_do_i[i].verb%></div>
                        <div class="RegText"><%= how_do_i[i].desc%></div>
                        <div style="font-size: 0.7rem; font-weight: lighter"><%= how_do_i[i].name %></div>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
